// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model post {
    id          String   @id @default(cuid())
    createdAt   DateTime @default(now())
    title       String   @db.VarChar(80)
    description String   @db.VarChar(500)
    authors     String   @db.VarChar(80)
    year        Int      @db.Int 
    originlink  String
    userID      String
    imageURL    String   
    status      String
    favcount    Int
    

    @@index([userID])
}

enum Status {
  PENDING
  ACCEPTED
  REJECTED
}